@page
@model PackageDeliverySystem.Pages.Admin.Packages.IndexModel
@{
}
<div action="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h3 class="text-primary"> Packages </h3>
		</div>
		<div class="col-6">
			<a asp-page="Create" class="btn btn-primary">
				Create New Package
			</a>
		</div>
	</div>
</div>

<br />

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Customer</th>
			<th>Recipient</th>
			<th>Destination</th>
			<th>Type</th>
			<th>Status</th>
			<th>Cost</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.Packages)
		{
			<tr>
				<td>@obj.Customer?.Name</td>
				<td>@obj.RecipientName</td>
				<td>@obj.Destination</td>
				<td>@obj.Type</td>
				<td>@obj.Status</td>
				<td>€@obj.Cost.ToString("N2")</td>
				<td>
					<a asp-page="Edit" class="btn btn-primary" asp-route-id="@obj.Id">Edit</a>
				</td>
				<td>
					<a asp-page="Delete" class="btn btn-danger" asp-route-id="@obj.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>