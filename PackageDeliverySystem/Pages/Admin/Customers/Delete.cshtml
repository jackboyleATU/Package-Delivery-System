@page
@model PackageDeliverySystem.Pages.Admin.Customers.DeleteModel
@{
}
<form method="post">
	<input hidden asp-for="Customer.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 action="text-primary pl-3">Delete Customer</h2>
		</div>

		<div class="mb-3">
			<label asp-for="@Model.Customer.Name"></label>
			<input disabled asp-for="@Model.Customer.Name" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Customer.Address"></label>
			<input disabled asp-for="@Model.Customer.Address" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Customer.Packages"></label>
			<input disabled asp-for="@Model.Customer.Packages" class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger">Delete</button>
		<a asp-page="Index" class="btn btn-secondary">Back to Index</a>
	</div>
</form>