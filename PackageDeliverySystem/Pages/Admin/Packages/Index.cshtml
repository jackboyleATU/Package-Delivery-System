@page
@model PackageDeliverySystem.Pages.Admin.Packages.IndexModel
@{
}
<div action="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h3 class="text-primary"> Packages </h3>
		</div>
		<div class="col-6">
			<a asp-page="Create" class="btn btn-primary">
				Create New Package
			</a>
		</div>
	</div>
</div>

<br />
<br />
<br />

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Destination</th>
			<th>Type</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.Package)
		{
					<tr>
						<td width="50%">@obj.Destination</td>
						<td width="50%">@obj.Type</td>
						<td width="50%">@obj.Status</td>
						<td>
							<a asp-page="Edit" class="btn btn-primary" asp-route-id="@obj.Id">Edit</a>
						</td>
						<td>
							<a asp-page="Delete" class="btn btn-primary" asp-route-id="@obj.Id">Delete</a>
						</td>
					</tr>
		}
	</tbody>
</table>