@page
@model PackageDeliverySystem.Pages.Admin.Employees.DeleteModel
@{
}
<form method="post">
	<input hidden asp-for="Employee.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 action="text-primary pl-3">Delete Employee</h2>
		</div>

		<div class="mb-3">
			<label asp-for="@Model.Employee.Name"></label>
			<input asp-for="@Model.Employee.Name" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Employee.Address"></label>
			<input asp-for="@Model.Employee.Address" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Employee.Dept"></label>
			<input asp-for="@Model.Employee.Dept" class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger">Delete</button>
		<a asp-page="Index" class="btn btn-secondary">Back to Index</a>
	</div>
</form>