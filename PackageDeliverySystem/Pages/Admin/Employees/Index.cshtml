@page
@model PackageDeliverySystem.Pages.Admin.Employees.IndexModel
@{
}
<div action="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h3 class="text-primary"> Employees </h3>
		</div>
		<div class="col-6">
			<a asp-page="Create" class="btn btn-primary">
				Create New Employee
			</a>
		</div>
	</div>
</div>

<br />
<br />
<br />

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Employee</th>
			<th>Address</th>
			<th>Department</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.Employees)
		{
				<tr>
					<td width="50%">@obj.Name</td>
					<td width="50%">@obj.Address</td>
					<td width="50%">@obj.Dept</td>
					<td>
						<a asp-page="Edit" class="btn btn-primary" asp-route-id="@obj.Id">Edit</a>
					</td>
					<td>
						<a asp-page="Delete" class="btn btn-primary" asp-route-id="@obj.Id">Delete</a>
					</td>
				</tr>
		}
	</tbody>
</table>