@page
@model PackageDeliverySystem.Pages.Admin.Employees.CreateModel
@{
}
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 action="text-primary pl-3">Create New Employee</h2>
		</div>

		<div class="mb-3">
			<label asp-for="@Model.Employee.Name"></label>
			<input asp-for="@Model.Employee.Name" class="form-control" />
			<span asp-validation-for="@Model.Employee.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Employee.Address"></label>
			<input asp-for="@Model.Employee.Address" class="form-control" />
			<span asp-validation-for="@Model.Employee.Address" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Employee.Dept"></label>
			<input asp-for="@Model.Employee.Dept" class="form-control" />
			<span asp-validation-for="@Model.Employee.Dept" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary">Create</button>
	</div>
</form>

@section Scripts {
	@{
				<partial name="_validationScriptsPartial" />
	}
}