@page
@model PackageDeliverySystem.Pages.Admin.Packages.DeleteModel
@{
}
<form method="post">
	<input hidden asp-for="Package.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 action="text-primary pl-3">Delete Package</h2>
		</div>

		<div class="mb-3">
			<label asp-for="@Model.Package.RecipientName"></label>
			<input disabled asp-for="@Model.Package.RecipientName" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Package.Destination"></label>
			<input disabled asp-for="@Model.Package.Destination" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Package.Type"></label>
			<input disabled asp-for="@Model.Package.Type" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Package.Status"></label>
			<input disabled asp-for="@Model.Package.Status" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Package.Cost"></label>
			<input disabled asp-for="@Model.Package.Cost" class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger">Delete</button>
		<a asp-page="Index" class="btn btn-secondary">Back to Index</a>
	</div>
</form>