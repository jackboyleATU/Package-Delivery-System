@page
@model PackageDeliverySystem.Pages.Admin.Customers.IndexModel
@{
}
<div action="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h3 class="text-primary"> Customers </h3>
		</div>
		<div class="col-6">
			<a asp-page="Create" class="btn btn-primary">
				Create New Customer
			</a>
		</div>
	</div>
</div>

<br />

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Address</th>
			<th>Packages</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model.Customers)
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.Address</td>
				<td>@(obj.Packages?.Count ?? 0)</td>
				<td>
					<a asp-page="Edit" class="btn btn-primary" asp-route-id="@obj.Id">Edit</a>
				</td>
				<td>
					<a asp-page="Delete" class="btn btn-danger" asp-route-id="@obj.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>